import textwrap

def menu():
    return textwrap.dedent('''\
    ========== MENU ==========
    [d] Depositar
    [s] Sacar
    [e] Extrato
    [c] Criar Usuário
    [l] Listar Contas
    [q] Sair
    ==========================
    ''')

def depositar(saldo, valor, extrato):
    if valor > 0:
        saldo += valor
        extrato += f"Depósito: R$ {valor:.2f}\n"
        print(f"Depósito realizado com sucesso! Saldo atual: R$ {saldo:.2f}")
    else:
        print("Operação falhou! O valor informado é inválido.")
    return saldo, extrato

def sacar(saldo, valor, limite, extrato, numero_saques, LIMITE_SAQUES):
    excedeu_saldo = valor > saldo
    excedeu_limite = valor > limite
    excedeu_saques = numero_saques >= LIMITE_SAQUES

    if excedeu_saldo:
        print("Operação falhou! Você não tem saldo suficiente.")
    elif excedeu_limite:
        print("Operação falhou! O valor do saque excede o limite.")
    elif excedeu_saques:
        print("Operação falhou! Número máximo de saques excedido.")
    elif valor > 0:
        saldo -= valor
        extrato += f"Saque: R$ {valor:.2f}\n"
        numero_saques += 1
        print(f"Saque realizado com sucesso! Saldo atual: R$ {saldo:.2f}")
    else:
        print("Operação falhou! O valor informado é inválido.")

    return saldo, extrato, numero_saques

def exibir_extrato(saldo, extrato):
    print("\n================ EXTRATO ================")
    print("Não foram realizadas movimentações." if not extrato else extrato)
    print(f"\nSaldo: R$ {saldo:.2f}")
    print("==========================================")

def criar_usuario(novo_usuarios):
    cpf = input("Informe o CPF (somente números): ")
    usuario = filtrar_usuario(novo_usuarios, cpf)

    if usuario:
        print("Já existe um usuário com esse CPF.")
        return

    nome = input("Informe o nome completo: ")
    data_nascimento = input("Informe a data de nascimento (dd-mm-aaaa): ")
    endereco = input("Informe o endereço (logradouro, número - bairro - cidade/sigla estado): ")

    novo_usuarios.append({
        "nome": nome,
        "data_nascimento": data_nascimento,
        "cpf": cpf,
        "endereco": endereco
    })
    print("Usuário criado com sucesso!")

def filtrar_usuario(usuarios, cpf):
    usuarios_filtrados = [usuario for usuario in usuarios if usuario["cpf"] == cpf]
    return usuarios_filtrados[0] if usuarios_filtrados else None

def criar_conta(agencia, numero_conta, usuario):
    return {
        "agencia": agencia,
        "numero_conta": numero_conta,
        "usuario": usuario,
        "saldo": 0,
        "limite": 500,
        "extrato": "",
        "numero_saques": 0,
        "LIMITE_SAQUES": 3
    }

def listar_contas(contas):
    if not contas:
        print("Nenhuma conta cadastrada.")
        return

    for conta in contas:
        print(f"Agência: {conta['agencia']}, Conta: {conta['numero_conta']}, "
              f"Usuário: {conta['usuario']['nome']}, Saldo: R$ {conta['saldo']:.2f}")

def main():
    LIMITE_SAQUES = 3
    AGENCIA = "0001"
    contas = []
    usuarios = []
    numero_conta = 1

    while True:
        print(menu())
        opcao = input("Escolha uma opção: ")

        if opcao == 'd':
            valor = float(input("Informe o valor para depósito: R$ "))
            if contas:  # Se houver contas cadastradas
                saldo, extrato = depositar(contas[0]['saldo'], valor, contas[0]['extrato'])
                contas[0]['saldo'] = saldo
                contas[0]['extrato'] = extrato
        elif opcao == 's':
            valor = float(input("Informe o valor para saque: R$ "))
            if contas:  # Se houver contas cadastradas
                saldo, extrato, numero_saques = sacar(
                    saldo=contas[0]['saldo'], valor=valor, limite=500, extrato=contas[0]['extrato'],
                    numero_saques=contas[0]['numero_saques'], LIMITE_SAQUES=LIMITE_SAQUES
                )
                contas[0]['saldo'] = saldo
                contas[0]['extrato'] = extrato
                contas[0]['numero_saques'] = numero_saques
        elif opcao == 'e':
            if contas:  # Se houver contas cadastradas
                exibir_extrato(contas[0]['saldo'], extrato=contas[0]['extrato'])
        elif opcao == 'c':
            criar_usuario(usuarios)
        elif opcao == 'l':
            listar_contas(contas)
        elif opcao == 'q':
            print("Saindo do sistema. Até logo!")
            break
        else:
            print("Opção inválida! Por favor, escolha uma opção válida.")

        if opcao == 'c' and usuarios:
            usuario = usuarios[-1]  # Considerando o último usuário cadastrado
            conta = criar_conta(AGENCIA, numero_conta, usuario)
            contas.append(conta)
            numero_conta += 1

if __name__ == "__main__":
    main()
